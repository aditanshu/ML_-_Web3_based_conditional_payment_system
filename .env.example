# ==========================================
# Hardhat Deployment Configuration
# ==========================================

# Deployer private key (NEVER commit actual .env file)
# Get from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_deployer_private_key_here

# Sepolia RPC URL (get free key from Infura or Alchemy)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Etherscan API key (for contract verification)
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Optional: Relayer address (defaults to deployer if not set)
RELAYER_ADDRESS=

# ==========================================
# Gas Reporting (Optional)
# ==========================================

# Set to "true" to enable gas reporting in tests
REPORT_GAS=false

# CoinMarketCap API key for USD gas cost estimation
COINMARKETCAP_API_KEY=your_coinmarketcap_key_here

# ==========================================
# Existing Flask Backend Configuration
# ==========================================

# Groq API key for AI intent parsing
GROQ_API_KEY=your_groq_api_key_here
